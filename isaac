<!DOCTYPE html>
<html lang="en">
  <head>import { useState } from "react";
import axios from "axios";

const API = import.meta.env.VITE_API_URL;

export default function App() {
  const [roll, setRoll] = useState(null);

  const play = async () => {
    const r = await axios.post(`${API}/api/dice`);
    setRoll(r.data.roll);
  };

  return (
    <div className="app">
      <h1>ðŸ’œ VioletStake</h1>
      <button onClick={play}>Roll Dice</button>
      {roll && <p>Rolled: {roll}</p>}
    </div>
  );
}
